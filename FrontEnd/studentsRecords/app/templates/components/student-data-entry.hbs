<div class="ui bottom attached tab segment" data-tab="admission">
  <div class="ui inverted violet segment">
      <h2>
        <center> {{currentStudent.firstName}} {{currentStudent.lastName}} </center>
      </h2>
    </div>
  <div class="ui pointing secondary menu">
    <div class="active item" data-tab="comments">Admission Comments</div>
    <div class="item" data-tab="basis">Basis of Admission</div>
    <div class="item" data-tab="registration">Registration Comments</div>
  </div>

  <div class="ui active tab" data-tab="comments">
      <div class="ui">
        <div>
          <div>
           
           <div class ="ui form">
             <div class = "inline field">
                <div class = "ui label">Admission Average:</div>
                 {{input type="text" value = currentStudent.admissionAvg}}
              </div>
           </div>
            
            <br>
          </div>
        </div>
        <div>
          <div>
            <div class="ui form">
            <div class="inline field">
            {{textarea size="10" type="text" value = currentStudent.admissionComments placeholder = "Enter admission comments"}}
            </div>
            </div>
          </div>
        </div>
      </div>
  </div>



  <div class="ui bottom attached tab" data-tab="basis">
    

      <div>
        <div class="ui form">
          <div class="inline field">
            {{textarea size="10" type="text" value = currentStudent.basis placeholder="Enter basis of admission"}}
          </div>
        </div>
      </div>
    
  </div>

  <div class="ui bottom attached tab" data-tab="registration">


      <div>
        <div class="ui form">
          <div class="inline field">
            {{textarea size="10" type="text" value = currentStudent.regComments placeholder = "Enter registration comments"}}
          </div>
        </div>
      </div>
  </div>

</div>


<div class="ui bottom attached tab segment" data-tab="standing">
  <div class="ui inverted violet segment">
    <h2>
      <center> {{currentStudent.firstName}} {{currentStudent.lastName}} </center>
    </h2>
  </div>
 <table class="ui celled table">
   <tbody>
     <tr>
      <td>Course name</td>
      <td>Description</td>
      <td>Units</td>
      <td>Grade</td>
      <td>Location</td>
     </tr>
   {{#each currentStudent.transInfo as |standings|}}
   <tr>
     <td>{{standings.course}}</td>
     <td>{{standings.description}}</td>
     <td>{{standings.units}}</td>
     <td>{{standings.grade}}</td>
     <td>{{standings.location}}</td>
   </tr>
   {{else}}
   <tr>
    <td>No courses listed</td>
    <td></td><td></td><td></td><td></td>
   </tr>
   {{/each}}
   </tbody>
 </table>
 {{add-course currentStudent = currentStudent}}
</div>
  

<div class="ui bottom attached tab segment" data-tab="awards">
  <div class="ui inverted violet segment">
    <h2>
      <center> {{currentStudent.firstName}} {{currentStudent.lastName}} </center>
    </h2>
  </div>

  <table class = "ui celled table">
    <tbody>
      <br>
      <center><tr><h3>Awards And Scholarships</h3></tr></center>
      <br>
      {{#each currentStudent.awardInfo as |awards|}}
      <tr>
        <td>{{awards.note}}</td>
      </tr>
      {{else}}
      <tr>
        <td>No Awards or Scholarships Currently On Record</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{add-awards currentStudent = currentStudent}}
</div>


<div class="ui bottom attached tab segment" data-tab="highschool">
  <div class="ui inverted violet segment">
    <h2>
      <center> {{currentStudent.firstName}} {{currentStudent.lastName}} </center>
    </h2>
  </div>
</div>

