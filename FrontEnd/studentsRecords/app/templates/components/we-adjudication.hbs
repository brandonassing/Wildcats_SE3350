<div class="ui top attached tabular menu">
    <a class="active item" data-tab="adjudication">Adjudication Rules</a>
    <a class="item" data-tab="categories">Categories</a>
</div>
<div class="ui bottom attached active tab segment" data-tab="adjudication">
    <div class="ui grid">
        <div class="ui form">
            <h3>Adjudication tab</h3>
        </div>
    </div>
</div>
<div class="ui bottom attached tab segment" data-tab="categories">
    <div class="ui grid">
        <div class="ui form">
            <div class="ten wide segment">
                <div class="ui right aligned seven wide column">
                <br>
                    <div class="ui celled table">
                        <tbody>
                        <tr>
                            <td>Category</td>
                            <td>Faculty</td>
                            <td>Department</td>
                            <td>Administration</td>
                            <td>Assesment Code</td>
                            <td>Action</td>
                        </tr>
                        {{#each assessmentModel as |assessCodes|}}
                        <tr>
                            <td class="four wide">
                                {{assessCodes.name}}
                            </td>
                            <td>
                                {{assessCodes.assess.faculty}}
                            </td>
                            <td>
                                {{assessCodes.assess.faculty.department}}
                            </td>
                            <td>
                                {{assessCodes.assess.faculty.department.program-administration}}
                            </td>
                            <td class="one wide">
                                {{assessCodes.code}}
                            </td>
                            <td class="one wide">
                                 <button class="ui icon button" data-tooltip="Add Course Code" data-inverted=" " {{action 'editCode'}}>
                                    <i class="edit icon"></i>
                                </button>
                            </td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </div>
                <br>
                </div>
            </div>
        </div>
    </div>
</div>