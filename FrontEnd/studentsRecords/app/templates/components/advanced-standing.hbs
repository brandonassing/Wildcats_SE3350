<table class="ui celled table">
   <tbody>
     <tr>
      <td>Course name</td>
      <td>Description</td>
      <td>Units</td>
      <td>Grade</td>
      <td>Location</td>
      <td>Action</td>
     </tr>
   {{#each currentStudent.transInfo as |standings|}}
   <tr>
     <td>{{standings.course}}</td>
     <td>{{standings.description}}</td>
     <td>{{standings.units}}</td>
     <td>{{standings.grade}}</td>
     <td>{{standings.location}}</td>
     <td>   
        <button class="ui icon button" {{action 'deleteCourse'}}>
            <i class="remove icon"></i>
        </button>
    </td>
   </tr>
   {{else}}
   <tr>
    <td>No courses on record</td>
    <td></td><td></td><td></td><td></td><td></td>
   </tr>
   {{/each}}
   <tr>
    <td><div class = "ui form">{{input type="text" value = course}}</div></td>
     <td><div class = "ui form">{{input type="text" value = description}}</div></td>
     <td><div class = "ui form">{{input type="text" value = units}}</div></td>
     <td><div class = "ui form">{{input type="text" value = grade}}</div></td>
     <td> <div class = "ui form">{{input type="text" value = location}}</div></td>
     <td>   
        <button class="ui icon button" {{action 'addCourse'}}>
            <i class="plus icon"></i>
        </button>
    </td>
    </tr>
   </tbody>
 </table>