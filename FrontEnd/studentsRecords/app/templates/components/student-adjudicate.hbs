<div id="error-modal" class="ui basic modal">
    <div class="ui icon header">
        <i class="warning circle red icon"></i> Cannot save with empty values!
        <div class="actions">
            <div class="ui basic ok inverted button" {{action 'closeErrorModal'}}>
                Ok
            </div>
        </div>
    </div>
</div>
<div id="add-modal-rec-adj" class="ui modal">
    <div class="header">
        Add Assesment Code
    </div>
    <div class="content">
        <h3>Assesment Roles</h3>

        <table class="ui celled table">
            <tbody>
                <tr>
                    <td>Code</td>
                    <td>Name</td>
                    <td>Action</td>
                </tr>
                {{#each assessmentModel as |aCode|}}
                <tr>
                    <td>{{aCode.code}}</td>
                    <td>{{aCode.name}}</td>
                    <td>
                        <button class="ui icon button" data-tooltip="Add To Student" data-inverted=" " {{action 'addThisCode' aCode}}>
                            <i class="plus icon"></i>
                        </button>
                    </td>
                </tr>
